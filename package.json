{
  "name": "designer",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write ./examples/**/src/**/*.{js,jsx,tsx,ts}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write ./examples/**/src/**/*.{js,jsx,tsx,ts}"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.0",
    "lerna": "^8.0.0",
    "lint-staged": "^15.2.0",
    "sort-package-json": "^2.6.0",
    "typescript": "^5"
  }
}
