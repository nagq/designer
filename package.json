{
  "name": "designer",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write ./packages/*/src/*/*.{js,jsx,tsx,ts}"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "lerna": "^8.0.0",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write ./packages/*/src/*/*.{js,jsx,tsx,ts}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
